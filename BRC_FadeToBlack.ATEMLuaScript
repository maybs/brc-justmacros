-- $$USES "BRC_TOOLS"
CLS();

BRCFinishActiveTransition();

EnviroWrite( "BRC_SCENE_BUTTON", BRC_BUTTON_XK24_BLACK );

if ATEMMixerCount() > 0 then
    if not ATEMMixerMEGetFadedToBlack( 1, 1 ) then
        ATEMMixerMEFadeToBlack( 1, 1 );
    end;

    Sleep( 1000 );
    ATEMMixerAUXSetInput( 1, 1, 1 );
end;
