-- $$USES "BRC_TOOLS"

local programInput = ATEMMixerCount() > 0 and ATEMMixerMEGetProgramInput( 1, 1 );

BRCTransition( "cut", EnviroRead( "BRC_KEY_ON" ) == "TRUE" );

local previewInput = programInput;
local previewButton = BRC_INPUT_BUTTON[previewInput];

if previewButton then
  BRCSetLEDRadioGroup( BRC_PREVIEW_BUTTONS, previewButton );
  BRCCameraControllerSelectCamera(BRC_INPUT_CAMERA_NUMBER[previewInput]);
end;
