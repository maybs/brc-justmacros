-- $$USES "BRC_TOOLS"
CLS();

if ATEMMixerCount() > 0 then
    ATEMMixerAudioSetInputGain( 1, BRC_AUDIO_RCA, BRC_AUDIO_LEVEL_BAND );
else
    VSLog( "Set audio level to " .. BRC_AUDIO_LEVEL_BAND );
end;

BRCFinishActiveTransition();
BRCSetLEDRadioGroup( BRC_SCENE_BUTTONS, BRC_BUTTON_BAND );
BRCProject( BRC_BUTTON_PROJECT_COMPUTER, BRC_INPUT_COMPUTER_MASTER );
BRCPreview( BRC_BUTTON_PREVIEW_WIDE, BRC_INPUT_CAMERA_WIDE );
BRCTransition( "auto", true );
