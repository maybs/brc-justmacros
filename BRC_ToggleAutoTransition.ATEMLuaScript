-- $$USES "BRC_TOOLS"

local brcAutoOn;
if EnviroRead( "BRC_AUTO_ON" ) == "TRUE" then
    brcAutoOn = "FALSE";
else
    brcAutoOn = "TRUE";
end;
EnviroWrite( "BRC_AUTO_ON", brcAutoOn );
if XKeysPanelCount() > 0 then
    XKeysSetButtonBlueLEDState( 1, BRC_BUTTON_AUTO_TRANSITION_ON, brcAutoOn );
else
    VSLog("Auto transitioning is now " .. (brcAutoOn == "TRUE" and "ON" or "OFF"))
end;
